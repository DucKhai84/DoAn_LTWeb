@model DoAn_LTWeb.Models.Xe
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/fonts/fontawesome-free-6.5.1-web/css/all.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

@using (Html.BeginForm("DeleteConfirmed", "Garage", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.MaXe" />

    <div class="alert alert-warning">
        <h4 class="text-danger">⚠ Cảnh báo</h4>
        <p>
            Bạn có chắc chắn muốn xóa xe <strong>@Model.BienSoXe</strong> của
            <strong>@(Model.KhachHang != null ? Model.KhachHang.TenKhachHang : "Không xác định")</strong> không?
        </p>
    </div>

    <button type="submit" class="btn btn-danger" onclick="return confirmDelete()">
        <i class="fa fa-trash"></i> Xóa
    </button>
    <a asp-controller="Garage" asp-action="Garage" class="btn btn-secondary">
        <i class="fa fa-arrow-left"></i> Hủy
    </a>
}

<script>
    function confirmDelete() {
        return confirm("Bạn có chắc chắn muốn xóa xe này?");
    }
</script>

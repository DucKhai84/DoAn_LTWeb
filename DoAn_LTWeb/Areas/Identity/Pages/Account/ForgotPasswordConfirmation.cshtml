@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
    Layout = "~/Views/Shared/LayoutAccount/_LayoutLogin.cshtml";
}

<section id="body">
    <div class="container-fluid d-flex justify-content-center">
        <div class="content_wrap">
            <div class="form-wrapper" id="form-wrapper">
                <!-- Form Quên mật khẩu -->
                <div class="form-container" id="forgot-password-form">
                    <h3 class="content_login-name">
                        <i class="fa-solid fa-building-user me-1"></i> 113 Cô Giang
                    </h3>
                    <div class="content_login-body">
                        <div class="login_body-title">
                            <h2 class="body_login">Vui lòng kiểm tra email của bạn !</h2>
                        </div>
                        <p>
                            Vui lòng kiểm tra hộp thư đến trong email mà chúng tôi gửi đến bạn nhé !!!
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@model DoAn_LTWeb.Models.KhachHang
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Edit Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/style_Admin_2.css" asp-append-version="true">
<link rel="stylesheet" href="/fonts/fontawesome-free-6.5.1-web/css/all.css">

<form class="form-1" asp-action="Edit" method="post">

    <input type="hidden" asp-for="MaKhachHang" />

    <div class="form-group">
        <label asp-for="TenKhachHang"></label>
        <input asp-for="TenKhachHang" class="form-control" />
        <span asp-validation-for="TenKhachHang" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoDienThoai"></label>
        <input asp-for="SoDienThoai" class="form-control" />
        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CMND"></label>
        <input asp-for="CMND" class="form-control" />
        <span asp-validation-for="CMND" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GioiTinh">Gender</label>
        <select asp-for="GioiTinh" class="form-control">
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
        </select>
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgaySinh">Date of Birth</label>
        <input asp-for="NgaySinh" type="date" class="form-control" />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
</form>

 @{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="row justify-content-center">
    <div class="col-3">
        <div style="width: 100%;" class="card" style="width: 18rem;">
            <img style="width: 100%; height: 200px;" src="./images/OIP (1).jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Phòng thường.</h5>
                <p style="height: 140px" class="card-text">Phòng sẽ có các nội thất cơ bản như giường, tủ quần áo, bàn học và một số tiện nghi cần thiết, đảm bảo đáp ứng nhu cầu sinh hoạt hàng ngày của người thuê.</p>
                <a style="text-align: center ;width: 140px ;text-decoration: none; color: white; background-color: #000; padding: 10px 15px; margin-top: 12px; border-radius: 16px; opacity: .8; display: block" asp-controller="Home" asp-action="Display">Xem phòng</a>
            </div>
        </div>
    </div>
    <div class="col-3">
        <div style="width: 100%;" class="card" style="width: 18rem;">
            <img style="width: 100%; height: 200px;" src="./images/OIP (2).jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Phòng cao cấp.</h5>
                <p style="height: 140px" class="card-text">Phòng được trang bị đầy đủ tiện nghi và nội thất như giường, tủ, bàn học, máy lạnh, wifi và nhà vệ sinh riêng, mang đến không gian sống tiện nghi và thoải mái.</p>
                <a style="text-align: center ;width: 140px ;text-decoration: none; color: white; background-color: #000; padding: 10px 15px; margin-top: 12px; border-radius: 16px; opacity: .8; display: block" asp-controller="Home" asp-action="Display2">Xem phòng</a>

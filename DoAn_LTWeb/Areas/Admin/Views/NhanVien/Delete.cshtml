@model DoAn_LTWeb.Models.NhanVien
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
<link rel="stylesheet" href="/font/fontawesome-free-6.5.1-web/fontawesome-free-6.5.1-web/css/all.css">>

<div class="container mt-5" style="min-height: 700px">
    <div class="card shadow border p-4" style="border-radius: 15px">
        <h3 class="text-danger text-center">Xác nhận xóa nhân viên</h3>
        <hr>
        <p><strong>Tên:</strong> @Model.TenNhanVien</p>
        <p><strong>SDT:</strong> @Model.SoDienThoai</p>
        <p><strong>CMND:</strong> @Model.CMND</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Giới tính:</strong> @Model.GioiTinh</p>
        <p><strong>Ngày sinh:</strong> @Model.NgaySinh</p>
        <p><strong>Ngày mua:</strong> @Model.NgayVaoLam</p>


        <div class="alert alert-warning text-center">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Bạn có chắc chắn muốn xóa nhân viên này? Hành động này không thể hoàn tác.
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="text-center">
            <input type="hidden" asp-for="MaNhanVien" />

            <button type="submit" name="delete" value="Delete" class="btn btn-danger me-2">
                <i class="fas fa-trash-alt me-1"></i> Xóa
            </button>

            <a asp-controller="NhanVien" asp-action="Index_Admin" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i> Hủy
            </a>
        </form>
    </div>
</div>



<script src="/assets/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/assets/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/assets/js/script.js"></script>
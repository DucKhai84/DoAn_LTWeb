@model DoAn_LTWeb.Models.Xe
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Add Vehical";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/style_Admin_2.css" asp-append-version="true">
<link rel="stylesheet" href="/fonts/fontawesome-free-6.5.1-web/css/all.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />


<form class="form-1" asp-action="Add" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-4">
        <input asp-for="BienSoXe" class="form-control" placeholder="Number Plate..." />
        <span asp-validation-for="BienSoXe" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <input asp-for="CMND" class="form-control" placeholder="Identity number..." />
        <span asp-validation-for="CMND" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="MaNhaXe">Chọn nhà xe</label>
        <select asp-for="MaNhaXe" asp-items="ViewBag.NhaXeList" class="form-control">
            <option value="">-- Chọn nhà xe --</option>
        </select>
        <span asp-validation-for="MaNhaXe" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="MaKhachHang">Chọn khách hàng</label>
        <select asp-for="MaKhachHang" asp-items="ViewBag.KhachHangList" class="form-control">
            <option value="">-- Chọn khách hàng --</option>
        </select>
        <span asp-validation-for="MaKhachHang" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Vehical</button>
</form>

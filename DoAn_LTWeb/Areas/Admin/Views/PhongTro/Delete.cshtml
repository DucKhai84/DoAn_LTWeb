@model DoAn_LTWeb.Models.PhongTro
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
<link rel="stylesheet" href="/font/fontawesome-free-6.5.1-web/fontawesome-free-6.5.1-web/css/all.css">

<div class="container mt-5" style="min-height: 500px">
    <div class="card shadow-lg border p-4" style="border-radius: 15px">
        <h3 class="text-danger text-center">Xác nhận xóa phòng trọ</h3>
        <hr>
        <p><strong>Phòng:</strong> @Model.TenPhongTro</p>
        <p><strong>Trạng thái:</strong> @Model.TrangThai</p>

        <div class="alert alert-warning text-center">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Bạn có chắc chắn muốn xóa phòng này? Hành động này không thể hoàn tác.
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="text-center">
            <input type="hidden" asp-for="MaPhongTro" />

            <button type="submit" name="delete" value="Delete" class="btn btn-danger me-2">
                <i class="fas fa-trash-alt me-1"></i> Xóa
            </button>

            <a asp-controller="PhongTro" asp-action="Index_Admin" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i> Hủy
            </a>
        </form>
    </div>
</div>


<script src="/assets/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/assets/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/assets/js/script.js"></script>